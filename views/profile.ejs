<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile | Database HIFI</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="gradient-bg-1">
    <!-- Alert Message -->
    <% if(message && message.length > 0) { %>
    <div id="alert-border-3" class="fixed top-4 right-4 z-50 glass-card p-4 max-w-md" role="alert">
        <div class="flex items-center">
            <i class="fas fa-<%= status === 'green' ? 'check-circle' : 'exclamation-circle' %> text-2xl mr-3 text-white"></i>
            <div class="text-sm font-medium text-white"><%= message %></div>
            <button onclick="dismiss()" class="ml-auto text-white hover:text-gray-200">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <% } %>

    <!-- Navbar -->
    <nav class="glass-navbar sticky top-0 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <a href="/" class="flex items-center">
                    <img src="/img/LogoHIFI-2.png" alt="HIFI Logo in navbar with modern minimalist style" class="h-12 w-auto">
                    <span class="ml-3 text-white text-xl font-bold">Database HIFI</span>
                </a>
                <div class="flex items-center space-x-4">
                    <a href="/" class="glass-button text-sm">
                        <i class="fas fa-home mr-2"></i>Home
                    </a>
                    <a href="/auth/logout" class="glass-button text-sm bg-red-500/20 hover:bg-red-500/30">
                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Profile Section -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="glass-card p-8">
            <h1 class="text-3xl font-bold text-white mb-8 text-center">
                <i class="fas fa-user-circle mr-3"></i>Profil Saya
            </h1>

            <form action="/profile" method="POST" class="space-y-6">
                <!-- Personal Info -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-white mb-2">Username</label>
                        <input type="text" name="username" value="<%= user.username %>" 
                               class="glass-input" required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white mb-2">Nama Lengkap</label>
                        <input type="text" name="nama" value="<%= user.nama || '' %>" 
                               class="glass-input" placeholder="Nama lengkap">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white mb-2">NPM</label>
                        <input type="number" name="npm" value="<%= user.npm || '' %>" 
                               class="glass-input" placeholder="Nomor Pokok Mahasiswa">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white mb-2">Email</label>
                        <input type="email" name="email" value="<%= user.email || '' %>" 
                               class="glass-input" placeholder="email@example.com">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white mb-2">Tempat Lahir</label>
                        <input type="text" name="ttl" value="<%= user.ttl || '' %>" 
                               class="glass-input" placeholder="Kota lahir">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white mb-2">Tanggal Lahir</label>
                        <input type="date" name="tgl" value="<%= user.tgl || '' %>" 
                               class="glass-input">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white mb-2">Agama</label>
                        <input type="text" name="agama" value="<%= user.agama || '' %>" 
                               class="glass-input" placeholder="Agama">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white mb-2">Golongan Darah</label>
                        <input type="text" name="goldar" value="<%= user.goldar || '' %>" 
                               class="glass-input" placeholder="A/B/AB/O">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white mb-2">No. HP</label>
                        <input type="text" name="hp" value="<%= user.hp || '' %>" 
                               class="glass-input" placeholder="08xxxxxxxxxx">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white mb-2">Alamat Rumah</label>
                        <input type="text" name="rumah" value="<%= user.rumah || '' %>" 
                               class="glass-input" placeholder="Alamat lengkap">
                    </div>
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-white mb-2">Alamat Kos</label>
                        <input type="text" name="kos" value="<%= user.kos || '' %>" 
                               class="glass-input" placeholder="Alamat kos (jika ada)">
                    </div>
                </div>

                <!-- Additional Info -->
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-white mb-2">Riwayat Pendidikan</label>
                        <textarea name="pendidikan" rows="3" class="glass-input" 
                                  placeholder="SD, SMP, SMA"><%= user.pendidikan || '' %></textarea>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white mb-2">Riwayat Kepanitiaan</label>
                        <textarea name="panitia" rows="3" class="glass-input" 
                                  placeholder="Kepanitiaan yang pernah diikuti"><%= user.panitia || '' %></textarea>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white mb-2">Riwayat Organisasi</label>
                        <textarea name="organisasi" rows="3" class="glass-input" 
                                  placeholder="Organisasi yang pernah diikuti"><%= user.organisasi || '' %></textarea>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white mb-2">Riwayat Pelatihan</label>
                        <textarea name="pelatihan" rows="3" class="glass-input" 
                                  placeholder="Pelatihan yang pernah diikuti"><%= user.pelatihan || '' %></textarea>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white mb-2">Prestasi</label>
                        <textarea name="prestasi" rows="3" class="glass-input" 
                                  placeholder="Prestasi yang pernah diraih"><%= user.prestasi || '' %></textarea>
                    </div>
                </div>

                <div class="flex space-x-4">
                    <button type="submit" class="glass-button flex-1">
                        <i class="fas fa-save mr-2"></i>Simpan Perubahan
                    </button>
                    <a href="/" class="glass-button flex-1 text-center bg-gray-500/20 hover:bg-gray-500/30">
                        <i class="fas fa-times mr-2"></i>Batal
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="/javascript/dom.js"></script>
</body>
</html>
