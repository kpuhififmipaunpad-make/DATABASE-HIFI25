    const dt = $('#usersTable').DataTable({
      responsive: true,
      autoWidth: false,
      scrollX: true,
      lengthChange: true,
      pageLength: 10,
      lengthMenu: [[10, 20, 30, 40, 50, -1], [10, 20, 30, 40, 50, "Semua"]],
