<!DOCTYPE html>
<html lang="id">
<head>
  <%- include('partials/header') %>
  <title>Dashboard Admin - HIFI Database</title>
</head>
<body>
  <!-- Background Shapes -->
  <div class="bg-shape bg-shape-1"></div>
  <div class="bg-shape bg-shape-2"></div>
  <div class="bg-shape bg-shape-3"></div>

  <!-- Sidebar -->
  <%- include('partials/sidebar') %>

  <!-- Main Content -->
  <div class="content-wrapper">
    <!-- Navbar -->
    <%- include('partials/navbar') %>

    <!-- Messages -->
    <%- include('partials/message') %>

    <!-- Dashboard Header -->
    <div class="dashboard-header" data-animate>
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="dashboard-title mb-2">
            <i class="fas fa-tachometer-alt"></i> Dashboard Admin
          </h1>
          <p class="dashboard-subtitle mb-0">
            Selamat datang kembali! Kelola data warga HIFI dengan mudah.
          </p>
        </div>
        <div>
          <img src="/img/Logo HIFI - SVG.svg" alt="Logo HIFI" style="height: 60px; filter: brightness(0) invert(1);">
        </div>
      </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid" data-animate>
      <!-- Total Warga -->
      <div class="stat-card">
        <div class="stat-card-icon">
          <i class="fas fa-users"></i>
        </div>
        <div class="stat-card-title">Total Warga</div>
        <div class="stat-card-value" data-counter="<%= users.length %>">0</div>
        <div class="stat-card-trend">
          <i class="fas fa-arrow-up"></i> +12% dari bulan lalu
        </div>
      </div>

      <!-- Warga Aktif -->
      <div class="stat-card">
        <div class="stat-card-icon" style="background: linear-gradient(135deg, #10B981 0%, #059669 100%);">
          <i class="fas fa-user-check"></i>
        </div>
        <div class="stat-card-title">Warga Aktif</div>
        <div class="stat-card-value" data-counter="<%= Math.floor(users.length * 0.85) %>">0</div>
        <div class="stat-card-trend" style="color: #10B981;">
          <i class="fas fa-arrow-up"></i> +8% dari bulan lalu
        </div>
      </div>

      <!-- Data Baru Bulan Ini -->
      <div class="stat-card">
        <div class="stat-card-icon" style="background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);">
          <i class="fas fa-user-plus"></i>
        </div>
        <div class="stat-card-title">Data Baru Bulan Ini</div>
        <div class="stat-card-value" data-counter="<%= Math.floor(users.length * 0.15) %>">0</div>
        <div class="stat-card-trend" style="color: #F59E0B;">
          <i class="fas fa-arrow-up"></i> Bulan ini
        </div>
      </div>

      <!-- Database Status -->
      <div class="stat-card">
        <div class="stat-card-icon" style="background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%);">
          <i class="fas fa-database"></i>
        </div>
        <div class="stat-card-title">Status Database</div>
        <div class="stat-card-value" style="font-size: 20px; color: #10B981;">
          <i class="fas fa-check-circle"></i> Online
        </div>
        <div class="stat-card-trend" style="color: #10B981;">
          <i class="fas fa-signal"></i> Koneksi stabil
        </div>
      </div>
    </div>

    <!-- Data Table -->
    <div data-animate>
      <%- include('partials/table') %>
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>
  </div>

  <!-- Scripts -->
  <%- include('partials/script') %>
</body>
</html>
