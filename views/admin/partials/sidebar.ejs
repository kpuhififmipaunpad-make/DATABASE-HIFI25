<aside class="sidebar-glass" id="sidebar">
  <!-- Logo Section with Animation -->
  <div style="padding: 28px 24px; text-align: center; border-bottom: 1px solid rgba(255, 255, 255, 0.15); background: rgba(0, 0, 0, 0.1);">
    <div style="position: relative; display: inline-block; margin-bottom: 16px;">
      <img 
        src="/img/Logo HIFI - SVG.svg" 
        alt="Logo HIFI" 
        style="width: 70px; height: auto; filter: drop-shadow(0 6px 15px rgba(220, 20, 60, 0.4)); transition: transform 0.3s ease;"
        onmouseover="this.style.transform='scale(1.1) rotate(5deg)'"
        onmouseout="this.style.transform='scale(1) rotate(0deg)'"
      >
      <div style="position: absolute; top: -5px; right: -5px; width: 12px; height: 12px; background: linear-gradient(135deg, #10B981, #059669); border-radius: 50%; box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.3); animation: pulse 2s ease-in-out infinite;"></div>
    </div>
    <h5 style="color: white; font-weight: 800; font-size: 18px; margin: 0; letter-spacing: 0.5px;">HIFI Admin</h5>
    <small style="color: rgba(255, 255, 255, 0.75); font-size: 13px; font-weight: 500;">Database Management</small>
  </div>
  
  <!-- Navigation Menu -->
  <nav style="padding: 24px 0;">
    <a href="/dashboard" class="sidebar-menu-item active">
      <i class="fas fa-tachometer-alt" style="width: 20px;"></i>
      <span class="menu-text">Dashboard</span>
      <span class="menu-badge" style="margin-left: auto; background: rgba(220, 20, 60, 0.2); color: #DC143C; font-size: 11px; font-weight: 700; padding: 3px 8px; border-radius: 6px;">New</span>
    </a>
    
    <a href="/profile" class="sidebar-menu-item">
      <i class="fas fa-user" style="width: 20px;"></i>
      <span class="menu-text">Profile</span>
    </a>
    
    <a href="/" class="sidebar-menu-item">
      <i class="fas fa-home" style="width: 20px;"></i>
      <span class="menu-text">Beranda</span>
    </a>
    
    <!-- Quick Stats -->
    <div style="margin: 24px 12px; padding: 16px; background: rgba(255, 255, 255, 0.05); border-radius: 12px; border: 1px solid rgba(255, 255, 255, 0.1);">
      <div class="menu-text">
        <p style="margin: 0 0 8px 0; color: rgba(255, 255, 255, 0.6); font-size: 11px; text-transform: uppercase; font-weight: 600; letter-spacing: 1px;">Quick Stats</p>
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
          <span style="color: rgba(255, 255, 255, 0.8); font-size: 12px;">Total Data</span>
          <span style="color: white; font-weight: 700; font-size: 14px;">-</span>
        </div>
        <div style="display: flex; justify-content: space-between; align-items: center;">
          <span style="color: rgba(255, 255, 255, 0.8); font-size: 12px;">Status</span>
          <span style="display: inline-flex; align-items: center; gap: 4px; color: #10B981; font-weight: 600; font-size: 12px;">
            <i class="fas fa-circle" style="font-size: 6px;"></i>
            Active
          </span>
        </div>
      </div>
    </div>
    
    <div style="border-top: 1px solid rgba(255, 255, 255, 0.15); margin: 20px 12px;"></div>
    
    <a href="/auth/logout" class="sidebar-menu-item" style="color: rgba(239, 68, 68, 0.95);">
      <i class="fas fa-sign-out-alt" style="width: 20px;"></i>
      <span class="menu-text">Keluar</span>
    </a>
  </nav>
  
  <!-- User Info at Bottom -->
  <div style="position: absolute; bottom: 0; left: 0; right: 0; padding: 20px; border-top: 1px solid rgba(255, 255, 255, 0.15); background: rgba(0, 0, 0, 0.2); backdrop-filter: blur(10px);">
    <div style="display: flex; align-items: center; gap: 12px;">
      <div style="width: 46px; height: 46px; border-radius: 50%; background: linear-gradient(135deg, #DC143C 0%, #1E3A8A 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: 16px; box-shadow: 0 4px 15px rgba(220, 20, 60, 0.4); position: relative;">
        <%= nama ? nama.charAt(0).toUpperCase() : 'A' %>
        <div style="position: absolute; bottom: 0; right: 0; width: 14px; height: 14px; background: #10B981; border-radius: 50%; border: 2px solid #1E3A8A;"></div>
      </div>
      <div class="menu-text" style="flex: 1; min-width: 0;">
        <p style="margin: 0; color: white; font-weight: 700; font-size: 14px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;"><%= nama %></p>
        <small style="color: rgba(255, 255, 255, 0.7); font-size: 12px; display: flex; align-items: center; gap: 4px;">
          <i class="fas fa-crown" style="font-size: 10px; color: #FBBF24;"></i>
          Administrator
        </small>
      </div>
    </div>
  </div>
</aside>

<!-- Mobile Toggle Button -->
<button 
  id="sidebarToggle" 
  style="
    display: none;
    position: fixed;
    bottom: 24px;
    right: 24px;
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: linear-gradient(135deg, #DC143C 0%, #1E3A8A 100%);
    border: none;
    color: white;
    font-size: 20px;
    box-shadow: 0 8px 25px rgba(220, 20, 60, 0.5);
    cursor: pointer;
    z-index: 997;
    transition: all 0.3s ease;
  "
  onmouseover="this.style.transform='scale(1.1)'"
  onmouseout="this.style.transform='scale(1)'"
>
  <i class="fas fa-bars"></i>
</button>

<!-- Sidebar Overlay for Mobile -->
<div id="sidebarOverlay" class="sidebar-overlay"></div>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.7;
      transform: scale(1.2);
    }
  }
  
  .sidebar-glass.collapsed .menu-text,
  .sidebar-glass.collapsed .menu-badge {
    display: none;
  }
  
  .sidebar-glass.collapsed {
    width: 80px;
  }
  
  .sidebar-glass.collapsed .sidebar-menu-item {
    justify-content: center;
    padding: 14px;
  }
  
  .sidebar-glass.collapsed nav > div:nth-child(4) {
    display: none;
  }
  
  @media (max-width: 768px) {
    .sidebar-glass {
      transform: translateX(-100%);
      box-shadow: none;
    }
    
    .sidebar-glass.mobile-active {
      transform: translateX(0);
      box-shadow: 4px 0 30px rgba(0, 0, 0, 0.5);
    }
    
    .sidebar-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.6);
      backdrop-filter: blur(4px);
      z-index: 998;
      display: none;
      transition: all 0.3s ease;
    }
    
    .sidebar-overlay.active {
      display: block;
    }
    
    #sidebarToggle {
      display: flex !important;
      align-items: center;
      justify-content: center;
    }
  }
  
  /* Smooth animations for menu items */
  .sidebar-menu-item {
    position: relative;
    overflow: hidden;
  }
  
  .sidebar-menu-item::after {
    content: '';
    position: absolute;
    right: -100%;
    top: 50%;
    transform: translateY(-50%);
    width: 3px;
    height: 70%;
    background: linear-gradient(180deg, #DC143C, #FF6B9D);
    border-radius: 2px;
    transition: right 0.3s ease;
  }
  
  .sidebar-menu-item.active::after,
  .sidebar-menu-item:hover::after {
    right: 0;
  }
</style>

<script>
  // Enhanced Mobile sidebar toggle
  document.addEventListener('DOMContentLoaded', () => {
    const sidebar = document.getElementById('sidebar');
    const toggleBtn = document.getElementById('sidebarToggle');
    const overlay = document.getElementById('sidebarOverlay');
    
    if (toggleBtn && overlay) {
      toggleBtn.addEventListener('click', () => {
        sidebar.classList.toggle('mobile-active');
        overlay.classList.toggle('active');
        
        // Animate button icon
        const icon = toggleBtn.querySelector('i');
        icon.classList.toggle('fa-bars');
        icon.classList.toggle('fa-times');
      });
      
      overlay.addEventListener('click', () => {
        sidebar.classList.remove('mobile-active');
        overlay.classList.remove('active');
        
        const icon = toggleBtn.querySelector('i');
        icon.classList.remove('fa-times');
        icon.classList.add('fa-bars');
      });
      
      // Close sidebar when clicking menu item on mobile
      const menuItems = sidebar.querySelectorAll('.sidebar-menu-item');
      menuItems.forEach(item => {
        item.addEventListener('click', () => {
          if (window.innerWidth <= 768) {
            sidebar.classList.remove('mobile-active');
            overlay.classList.remove('active');
            
            const icon = toggleBtn.querySelector('i');
            icon.classList.remove('fa-times');
            icon.classList.add('fa-bars');
          }
        });
      });
    }
  });
</script>
