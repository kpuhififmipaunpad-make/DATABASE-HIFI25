<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - HIFI Database</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="icon" type="image/png" href="/img/LogoHIFI-2.png?v=2">
  <link rel="apple-touch-icon" href="/img/LogoHIFI-2.png?v=2">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(135deg, #1E3A8A 0%, #3B82F6 50%, #DC143C 100%);
      background-size: 200% 200%;
      animation: gradientShift 15s ease infinite;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      padding: 20px;
      position: relative;
      overflow: hidden;
    }
    
    @keyframes gradientShift {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    
    /* Enhanced Background Shapes */
    .bg-shape {
      position: absolute;
      border-radius: 50%;
      filter: blur(80px);
      opacity: 0.3;
      animation: float 20s ease-in-out infinite;
    }
    
    .bg-shape-1 {
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, rgba(220, 20, 60, 0.4) 0%, transparent 70%);
      top: -10%;
      left: -10%;
      animation-delay: 0s;
    }
    
    .bg-shape-2 {
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(59, 130, 246, 0.4) 0%, transparent 70%);
      bottom: -10%;
      right: -10%;
      animation-delay: 7s;
    }
    
    .bg-shape-3 {
      width: 300px;
      height: 300px;
      background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      animation-delay: 3s;
    }
    
    @keyframes float {
      0%, 100% { transform: translate(0, 0) scale(1); }
      33% { transform: translate(30px, -30px) scale(1.1); }
      66% { transform: translate(-30px, 30px) scale(0.9); }
    }
    
    /* Login Container */
    .login-container {
      width: 100%;
      max-width: 480px;
      animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      z-index: 10;
    }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    /* Enhanced Login Card */
    .login-card {
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(40px) saturate(180%);
      -webkit-backdrop-filter: blur(40px) saturate(180%);
      border-radius: 32px;
      padding: 48px 40px;
      box-shadow: 
        0 20px 60px rgba(0, 0, 0, 0.15),
        0 0 100px rgba(220, 20, 60, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.6);
      border: 1px solid rgba(255, 255, 255, 0.5);
      position: relative;
      overflow: hidden;
    }
    
    .login-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, #DC143C 0%, #1E3A8A 100%);
    }
    
    /* Logo Section */
    .logo-section {
      text-align: center;
      margin-bottom: 40px;
    }
    
    .logo-section img {
      width: 120px;
      height: auto;
      margin-bottom: 24px;
      animation: logoFloat 3s ease-in-out infinite;
      filter: drop-shadow(0 10px 20px rgba(220, 20, 60, 0.2));
    }
    
    @keyframes logoFloat {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }
    
    .login-title {
      font-size: 32px;
      font-weight: 800;
      text-align: center;
      margin-bottom: 12px;
      background: linear-gradient(135deg, #DC143C 0%, #1E3A8A 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      letter-spacing: -0.5px;
    }
    
    .login-subtitle {
      text-align: center;
      color: #6B7280;
      margin-bottom: 0;
      font-size: 15px;
      font-weight: 500;
    }
    
    /* Back Link */
    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      color: #6B7280;
      text-decoration: none;
      margin-bottom: 24px;
      font-size: 14px;
      font-weight: 600;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      padding: 8px 12px;
      border-radius: 12px;
    }
    
    .back-link:hover {
      color: #1E3A8A;
      background: rgba(30, 58, 138, 0.05);
      transform: translateX(-5px);
    }
    
    .back-link i {
      transition: transform 0.3s ease;
    }
    
    .back-link:hover i {
      transform: translateX(-3px);
    }
    
    /* Form Styles */
    .form-group {
      margin-bottom: 24px;
    }
    
    .form-label {
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 14px;
      font-weight: 600;
      color: #374151;
      margin-bottom: 10px;
    }
    
    .form-label i {
      color: #DC143C;
      font-size: 12px;
    }
    
    .input-group-glass {
      position: relative;
      display: flex;
      align-items: center;
    }
    
    .input-icon {
      position: absolute;
      left: 16px;
      color: #9CA3AF;
      font-size: 16px;
      transition: all 0.3s ease;
      z-index: 2;
      pointer-events: none;
    }
    
    .form-control-glass {
      width: 100%;
      padding: 16px 16px 16px 48px;
      font-size: 15px;
      border: 2px solid rgba(209, 213, 219, 0.5);
      border-radius: 16px;
      background: rgba(255, 255, 255, 0.8);
      backdrop-filter: blur(10px);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      color: #1F2937;
      font-weight: 500;
    }
    
    .form-control-glass::placeholder {
      color: #9CA3AF;
      font-weight: 400;
    }
    
    .form-control-glass:focus {
      outline: none;
      border-color: #DC143C;
      background: #FFFFFF;
      box-shadow: 
        0 0 0 4px rgba(220, 20, 60, 0.1),
        0 10px 30px rgba(220, 20, 60, 0.1);
      transform: translateY(-2px);
    }
    
    .form-control-glass:focus + .input-icon,
    .input-group-glass:focus-within .input-icon {
      color: #DC143C;
      transform: scale(1.1);
    }
    
    /* Password Toggle Button */
    .password-toggle {
      position: absolute;
      right: 12px;
      background: transparent;
      border: none;
      color: #9CA3AF;
      cursor: pointer;
      padding: 10px;
      border-radius: 10px;
      transition: all 0.3s ease;
      z-index: 3;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .password-toggle:hover {
      color: #DC143C;
      background: rgba(220, 20, 60, 0.08);
      transform: scale(1.05);
    }
    
    .password-toggle:active {
      transform: scale(0.95);
    }
    
    .password-toggle i {
      font-size: 18px;
    }
    
    /* Submit Button */
    .btn-primary-gradient {
      width: 100%;
      padding: 16px 32px;
      font-size: 16px;
      font-weight: 700;
      color: #FFFFFF;
      background: linear-gradient(135deg, #DC143C 0%, #A01028 100%);
      border: none;
      border-radius: 16px;
      cursor: pointer;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 
        0 10px 30px rgba(220, 20, 60, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
      position: relative;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
    }
    
    .btn-primary-gradient::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
      transition: left 0.5s ease;
    }
    
    .btn-primary-gradient:hover {
      transform: translateY(-3px);
      box-shadow: 
        0 15px 40px rgba(220, 20, 60, 0.4),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
    }
    
    .btn-primary-gradient:hover::before {
      left: 100%;
    }
    
    .btn-primary-gradient:active {
      transform: translateY(-1px);
    }
    
    .btn-primary-gradient:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
    }
    
    /* Loading State */
    .btn-primary-gradient.loading {
      pointer-events: none;
    }
    
    .btn-primary-gradient.loading i {
      animation: spin 1s linear infinite;
    }
    
    @keyframes spin {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }
    
    /* Form Footer */
    .form-footer {
      margin-top: 32px;
      text-align: center;
    }
    
    .help-text {
      color: #6B7280;
      font-size: 13px;
      line-height: 1.6;
      margin-bottom: 20px;
      padding: 16px;
      background: rgba(59, 130, 246, 0.05);
      border-radius: 12px;
      border: 1px solid rgba(59, 130, 246, 0.1);
    }
    
    .help-text strong {
      color: #1E3A8A;
      font-weight: 700;
    }
    
    .form-footer p {
      color: #6B7280;
      font-size: 14px;
      margin-bottom: 12px;
      font-weight: 500;
    }
    
    .form-footer a {
      color: #1E3A8A;
      text-decoration: none;
      font-weight: 700;
      transition: all 0.3s ease;
      padding: 4px 8px;
      border-radius: 6px;
      display: inline-block;
    }
    
    .form-footer a:hover {
      color: #DC143C;
      background: rgba(220, 20, 60, 0.05);
      transform: translateY(-1px);
    }
    
    /* Alert Styles */
    .alert-glass {
      position: fixed;
      top: 20px;
      right: 20px;
      z-index: 10000;
      max-width: 420px;
      min-width: 300px;
      padding: 18px 24px;
      border-radius: 16px;
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      display: flex;
      align-items: center;
      gap: 14px;
      box-shadow: 
        0 10px 40px rgba(0, 0, 0, 0.15),
        inset 0 1px 0 rgba(255, 255, 255, 0.3);
      animation: slideInRight 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    @keyframes slideInRight {
      from {
        opacity: 0;
        transform: translateX(100px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }
    
    .alert-glass.hide {
      opacity: 0;
      transform: translateX(100px);
      pointer-events: none;
    }
    
    .alert-success {
      background: rgba(16, 185, 129, 0.95);
      border: 1px solid rgba(16, 185, 129, 0.5);
      color: #FFFFFF;
    }
    
    .alert-error {
      background: rgba(239, 68, 68, 0.95);
      border: 1px solid rgba(239, 68, 68, 0.5);
      color: #FFFFFF;
    }
    
    .alert-glass i:first-child {
      font-size: 22px;
      flex-shrink: 0;
    }
    
    .alert-glass span {
      flex: 1;
      font-size: 14px;
      font-weight: 600;
      line-height: 1.5;
    }
    
    .alert-glass button {
      background: none;
      border: none;
      color: inherit;
      cursor: pointer;
      padding: 8px;
      margin: -8px -8px -8px auto;
      border-radius: 8px;
      transition: all 0.3s ease;
      opacity: 0.8;
    }
    
    .alert-glass button:hover {
      opacity: 1;
      background: rgba(255, 255, 255, 0.2);
      transform: scale(1.1);
    }
    
    /* Responsive Design */
    @media (max-width: 640px) {
      body {
        padding: 16px;
      }
      
      .login-card {
        padding: 36px 28px;
        border-radius: 28px;
      }
      
      .login-title {
        font-size: 28px;
      }
      
      .login-subtitle {
        font-size: 14px;
      }
      
      .logo-section img {
        width: 100px;
      }
      
      .form-control-glass {
        padding: 14px 14px 14px 44px;
        font-size: 14px;
      }
      
      .btn-primary-gradient {
        padding: 14px 28px;
        font-size: 15px;
      }
      
      .alert-glass {
        right: 16px;
        left: 16px;
        max-width: calc(100% - 32px);
        min-width: auto;
      }
      
      .help-text {
        font-size: 12px;
        padding: 14px;
      }
    }
    
    @media (max-width: 400px) {
      .login-card {
        padding: 28px 20px;
      }
      
      .login-title {
        font-size: 24px;
      }
      
      .form-label {
        font-size: 13px;
      }
    }
    
    /* Touch Device Optimizations */
    @media (hover: none) {
      .form-control-glass:focus {
        transform: none;
      }
      
      .btn-primary-gradient:hover {
        transform: none;
      }
    }
    
    /* High Contrast Mode */
    @media (prefers-contrast: high) {
      .login-card {
        border: 2px solid #1F2937;
      }
      
      .form-control-glass {
        border: 2px solid #374151;
      }
    }
    
    /* Dark Mode Support (Optional) */
    @media (prefers-color-scheme: dark) {
      /* Can be implemented if needed */
    }
  </style>
</head>
<body>
  <!-- Enhanced Background Shapes -->
  <div class="bg-shape bg-shape-1"></div>
  <div class="bg-shape bg-shape-2"></div>
  <div class="bg-shape bg-shape-3"></div>
  
  <!-- Alert Messages -->
  <% if (message != '') { %>
    <div id="alert-border-3" class="alert-glass alert-<%= status === 'green' ? 'success' : 'error' %>">
      <i class="fas fa-<%= status === 'green' ? 'check-circle' : 'exclamation-circle' %>"></i>
      <span><%= message %></span>
      <button onclick="dismiss()" aria-label="Tutup notifikasi">
        <i class="fas fa-times"></i>
      </button>
    </div>
  <% } %>
  
  <div class="login-container">
    <div class="login-card">
      <a href="/" class="back-link">
        <i class="fas fa-arrow-left"></i>
        <span>Kembali ke Home</span>
      </a>
      
      <div class="logo-section">
        <img src="/img/Logo HIFI - SVG.svg" alt="Logo HIFI Database" loading="eager">
        <h1 class="login-title">Selamat Datang</h1>
        <p class="login-subtitle">Masuk ke akun HIFI Anda</p>
      </div>
      
      <form action="/auth/login" method="POST" data-validate id="loginForm">
        <div class="form-group">
          <label class="form-label" for="username">
            <i class="fas fa-user"></i>
            <span>Username (Gunakan NPM Anda)</span>
          </label>
          <div class="input-group-glass">
            <i class="fas fa-user input-icon"></i>
            <input 
              type="text" 
              id="username"
              name="username" 
              class="form-control-glass" 
              placeholder="Masukkan username Anda"
              required
              autocomplete="username"
              autocapitalize="off"
              spellcheck="false"
            >
          </div>
        </div>
        
        <div class="form-group">
          <label class="form-label" for="password">
            <i class="fas fa-lock"></i>
            <span>Password</span>
          </label>
          <div class="input-group-glass">
            <i class="fas fa-lock input-icon"></i>
            <input 
              type="password" 
              id="password" 
              name="password" 
              class="form-control-glass" 
              placeholder="Masukkan password Anda"
              required
              autocomplete="current-password"
            >
            <button type="button" class="password-toggle" id="seePassButton" aria-label="Tampilkan atau sembunyikan password">
              <i class="fas fa-eye" id="seePassIcon" aria-hidden="true"></i>
            </button>
          </div>
        </div>
        
        <button type="submit" class="btn-primary-gradient" id="loginButton">
          <i class="fas fa-sign-in-alt"></i>
          <span>Masuk</span>
        </button>
      </form>
      
      <div class="form-footer">
        <div class="help-text">
          Apabila Anda mengalami kendala saat masuk (misalnya lupa kata sandi, akun terkunci, atau kesalahan data),
          silakan menghubungi <strong>ADMD HIFI</strong> melalui kanal resmi himpunan untuk verifikasi dan bantuan lebih lanjut.
        </div>

        <p>
          <a href="/forgot">
            <i class="fas fa-key"></i> Lupa Password?
          </a>
        </p>
        <p>
          Belum punya akun? <a href="/auth/signup">
            <i class="fas fa-user-plus"></i> Daftar Sekarang
          </a>
        </p>
      </div>
    </div>
  </div>
  
  <script src="/javascript/animations.js"></script>
  <script src="/javascript/dom.js"></script>
  <script>
    // Enhanced dismiss function with smooth animation
    function dismiss() {
      const el = document.getElementById("alert-border-3");
      if (el) {
        el.style.opacity = '0';
        el.style.transform = 'translateX(100px)';
        setTimeout(() => {
          el.classList.add("hide");
        }, 400);
      }
    }
    
    // Auto-dismiss after 5 seconds
    setTimeout(() => {
      const alert = document.getElementById("alert-border-3");
      if (alert && !alert.classList.contains('hide')) {
        dismiss();
      }
    }, 5000);
    
    // Form submission handling with loading state
    const loginForm = document.getElementById('loginForm');
    const loginButton = document.getElementById('loginButton');
    
    if (loginForm && loginButton) {
      loginForm.addEventListener('submit', function(e) {
        // Add loading state
        loginButton.classList.add('loading');
        loginButton.disabled = true;
        
        const buttonText = loginButton.querySelector('span');
        const buttonIcon = loginButton.querySelector('i');
        
        if (buttonText) buttonText.textContent = 'Memproses...';
        if (buttonIcon) {
          buttonIcon.classList.remove('fa-sign-in-alt');
          buttonIcon.classList.add('fa-spinner', 'fa-spin');
        }
        
        // Form will submit normally, no e.preventDefault()
      });
    }
    
    // Add ripple effect to button
    if (loginButton) {
      loginButton.addEventListener('mousedown', function(e) {
        const ripple = document.createElement('span');
        const rect = this.getBoundingClientRect();
        const size = Math.max(rect.width, rect.height);
        const x = e.clientX - rect.left - size / 2;
        const y = e.clientY - rect.top - size / 2;
        
        ripple.style.cssText = `
          position: absolute;
          width: ${size}px;
          height: ${size}px;
          left: ${x}px;
          top: ${y}px;
          border-radius: 50%;
          background: rgba(255, 255, 255, 0.5);
          transform: scale(0);
          animation: ripple 0.6s ease-out;
          pointer-events: none;
        `;
        
        this.appendChild(ripple);
        
        setTimeout(() => {
          ripple.remove();
        }, 600);
      });
    }
    
    // Add ripple animation
    if (!document.getElementById('ripple-animation')) {
      const style = document.createElement('style');
      style.id = 'ripple-animation';
      style.textContent = `
        @keyframes ripple {
          to {
            transform: scale(4);
            opacity: 0;
          }
        }
      `;
      document.head.appendChild(style);
    }
    
    // Enhanced input focus effects
    const inputs = document.querySelectorAll('.form-control-glass');
    inputs.forEach(input => {
      input.addEventListener('focus', function() {
        this.parentElement.style.transform = 'translateY(-2px)';
      });
      
      input.addEventListener('blur', function() {
        this.parentElement.style.transform = 'translateY(0)';
      });
    });
    
    // Accessibility: Announce form errors to screen readers
    const formInputs = document.querySelectorAll('input[required]');
    formInputs.forEach(input => {
      input.addEventListener('invalid', function(e) {
        e.preventDefault();
        this.setAttribute('aria-invalid', 'true');
        
        // Visual feedback
        this.style.borderColor = '#EF4444';
        this.style.animation = 'shake 0.4s ease';
        
        setTimeout(() => {
          this.style.animation = '';
        }, 400);
      });
      
      input.addEventListener('input', function() {
        this.removeAttribute('aria-invalid');
        this.style.borderColor = '';
      });
    });
    
    // Add shake animation
    if (!document.getElementById('shake-animation')) {
      const style = document.createElement('style');
      style.id = 'shake-animation';
      style.textContent = `
        @keyframes shake {
          0%, 100% { transform: translateX(0); }
          25% { transform: translateX(-10px); }
          75% { transform: translateX(10px); }
        }
      `;
      document.head.appendChild(style);
    }
  </script>
</body>
</html>
