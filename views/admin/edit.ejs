<!DOCTYPE html>
<html lang="id">
<head>
  <link rel="icon" type="image/png" href="/img/LogoHIFI-2.png?v=2">
  <link rel="apple-touch-icon" href="/img/LogoHIFI-2.png?v=2">
  <%- include('partials/header') %>
  <style>
    body {
      background: linear-gradient(135deg, #1E3A8A 0%, #DC143C 100%);
      position: relative;
      overflow-x: hidden;
    }
    
    /* Background Effects */
    body::before {
      content: '';
      position: fixed;
      top: -50%;
      right: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(220, 20, 60, 0.1) 0%, transparent 70%);
      animation: rotate 20s linear infinite;
      pointer-events: none;
      z-index: 0;
    }
    
    @keyframes rotate {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }
    
    .wrapper {
      display: flex;
      min-height: 100vh;
      position: relative;
      z-index: 1;
    }
    
    .content-wrapper {
      flex: 1;
      margin-left: 260px;
      padding: 90px 40px 40px;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .content-wrapper.expanded {
      margin-left: 80px;
    }
    
    .edit-container {
      max-width: 1000px;
      margin: 0 auto;
    }
    
    .page-header {
      margin-bottom: 40px;
      animation: fadeInDown 0.8s ease-out;
    }
    
    .page-title {
      font-size: 36px;
      font-weight: 800;
      background: linear-gradient(135deg, #FFFFFF 0%, #E0E7FF 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 16px;
      text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      letter-spacing: -0.5px;
    }
    
    .breadcrumb-glass {
      background: rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(15px);
      padding: 14px 24px;
      border-radius: 14px;
      display: inline-flex;
      align-items: center;
      gap: 10px;
      color: white;
      font-weight: 500;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }
    
    .breadcrumb-glass a {
      color: white;
      text-decoration: none;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 6px;
    }
    
    .breadcrumb-glass a:hover {
      opacity: 0.8;
      transform: translateX(-2px);
    }
    
    .edit-card {
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(30px);
      border-radius: 28px;
      padding: 48px;
      box-shadow: 0 25px 80px rgba(0, 0, 0, 0.35);
      border: 1px solid rgba(255, 255, 255, 0.4);
      animation: fadeInUp 0.8s ease-out;
      position: relative;
      overflow: hidden;
    }
    
    .edit-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 5px;
      background: linear-gradient(90deg, #DC143C 0%, #FF6B9D 50%, #1E3A8A 100%);
      background-size: 200% 100%;
      animation: shimmer 3s linear infinite;
    }
    
    @keyframes shimmer {
      0% { background-position: -200% 0; }
      100% { background-position: 200% 0; }
    }
    
    .section-divider {
      border: none;
      height: 2px;
      background: linear-gradient(90deg, transparent, rgba(220, 20, 60, 0.3), transparent);
      margin: 36px 0;
      position: relative;
    }
    
    .section-divider::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 8px;
      height: 8px;
      background: #DC143C;
      border-radius: 50%;
      box-shadow: 0 0 0 4px rgba(220, 20, 60, 0.2);
    }
    
    .section-title {
      font-size: 22px;
      font-weight: 700;
      color: #1F2937;
      margin-bottom: 28px;
      display: flex;
      align-items: center;
      gap: 12px;
      position: relative;
      padding-bottom: 12px;
    }
    
    .section-title::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 60px;
      height: 3px;
      background: linear-gradient(90deg, #DC143C, #FF6B9D);
      border-radius: 2px;
    }
    
    .section-title i {
      font-size: 24px;
      background: linear-gradient(135deg, #DC143C, #1E3A8A);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    
    .form-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 24px;
    }
    
    .action-buttons {
      display: flex;
      gap: 20px;
      margin-top: 40px;
      padding-top: 40px;
      border-top: 2px solid rgba(0, 0, 0, 0.05);
    }
    
    .btn-cancel {
      background: rgba(107, 114, 128, 0.1);
      color: #374151;
      border: 2px solid #9CA3AF;
      border-radius: 14px;
      padding: 14px 36px;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      font-size: 15px;
    }
    
    .btn-cancel:hover {
      background: rgba(107, 114, 128, 0.2);
      transform: scale(1.02) translateY(-2px);
      box-shadow: 0 8px 20px rgba(107, 114, 128, 0.3);
    }
    
    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    /* Form enhancements */
    .form-group {
      animation: fadeInUp 0.6s ease-out;
      animation-fill-mode: both;
    }
    
    .form-grid .form-group:nth-child(1) { animation-delay: 0.1s; }
    .form-grid .form-group:nth-child(2) { animation-delay: 0.15s; }
    .form-grid .form-group:nth-child(3) { animation-delay: 0.2s; }
    .form-grid .form-group:nth-child(4) { animation-delay: 0.25s; }
    .form-grid .form-group:nth-child(5) { animation-delay: 0.3s; }
    .form-grid .form-group:nth-child(6) { animation-delay: 0.35s; }
    
    @media (max-width: 1024px) {
      .content-wrapper {
        padding: 80px 30px 30px;
      }
      
      .edit-card {
        padding: 36px;
      }
    }
    
    @media (max-width: 768px) {
      .content-wrapper {
        margin-left: 0;
        padding: 80px 20px 20px;
      }
      
      .page-title {
        font-size: 28px;
      }
      
      .edit-card {
        padding: 28px 20px;
        border-radius: 20px;
      }
      
      .form-grid {
        grid-template-columns: 1fr;
      }
      
      .action-buttons {
        flex-direction: column;
      }
      
      .section-title {
        font-size: 18px;
      }
    }
  </style>
</head>
<body>
  <div class="wrapper">
    <%- include('partials/sidebar', {nama: nama}) %>
    <%- include('partials/navbar', {nama: nama}) %>
    
    <div class="content-wrapper">
      <div class="edit-container">
        <!-- Page Header -->
        <div class="page-header">
          <h1 class="page-title">
            <i class="fas fa-user-edit"></i>
            Edit Data Anggota
          </h1>
          <div class="breadcrumb-glass">
            <a href="/dashboard">
              <i class="fas fa-home"></i>
              Dashboard
            </a>
            <i class="fas fa-chevron-right" style="font-size: 11px; opacity: 0.7;"></i>
            <span>Edit Data</span>
          </div>
        </div>
        
        <!-- Edit Form -->
        <div class="edit-card">
          <form action="/dashboard/edit/<%= user._id %>?_method=PUT" method="POST" data-validate>
            
            <!-- Account Information -->
            <div class="section-title">
              <i class="fas fa-user-circle"></i>
              Informasi Akun
            </div>
            
            <div class="form-grid">
              <div class="form-group">
                <label class="form-label">
                  <i class="fas fa-user" style="margin-right: 6px; color: #DC143C;"></i>
                  Username
                </label>
                <input 
                  type="text" 
                  name="username" 
                  class="form-control-glass" 
                  value="<%= user.username %>"
                  required
                  placeholder="Masukkan username"
                >
              </div>
              
              <div class="form-group">
                <label class="form-label">
                  <i class="fas fa-envelope" style="margin-right: 6px; color: #DC143C;"></i>
                  Email
                </label>
                <input 
                  type="email" 
                  name="email" 
                  class="form-control-glass" 
                  value="<%= user.email || '' %>"
                  required
                  placeholder="email@example.com"
                >
              </div>
            </div>
            
            <hr class="section-divider">
            
            <!-- Personal Data -->
            <div class="section-title">
              <i class="fas fa-id-card"></i>
              Data Pribadi
            </div>
            
            <div class="form-grid">
              <div class="form-group">
                <label class="form-label">
                  <i class="fas fa-signature" style="margin-right: 6px; color: #DC143C;"></i>
                  Nama Lengkap
                </label>
                <input 
                  type="text" 
                  name="nama" 
                  class="form-control-glass" 
                  value="<%= user.nama || '' %>"
                  placeholder="Nama lengkap"
                >
              </div>
              
              <div class="form-group">
                <label class="form-label">
                  <i class="fas fa-id-badge" style="margin-right: 6px; color: #DC143C;"></i>
                  NPM
                </label>
                <input 
                  type="number" 
                  name="npm" 
                  class="form-control-glass" 
                  value="<%= user.npm || '' %>"
                  placeholder="Nomor Pokok Mahasiswa"
                >
              </div>
              
              <div class="form-group">
                <label class="form-label">
                  <i class="fas fa-map-marker-alt" style="margin-right: 6px; color: #DC143C;"></i>
                  Tempat Lahir
                </label>
                <input 
                  type="text" 
                  name="ttl" 
                  class="form-control-glass" 
                  value="<%= user.ttl || '' %>"
                  placeholder="Kota tempat lahir"
                >
              </div>
              
              <div class="form-group">
                <label class="form-label">
                  <i class="fas fa-calendar" style="margin-right: 6px; color: #DC143C;"></i>
                  Tanggal Lahir
                </label>
                <input 
                  type="date" 
                  name="tgl" 
                  class="form-control-glass" 
                  value="<%= user.tgl || '' %>"
                >
              </div>
              
              <div class="form-group">
                <label class="form-label">
                  <i class="fas fa-pray" style="margin-right: 6px; color: #DC143C;"></i>
                  Agama
                </label>
                <select name="agama" class="form-control-glass">
                  <option value="">Pilih Agama</option>
                  <option value="Islam" <%= user.agama === 'Islam' ? 'selected' : '' %>>Islam</option>
                  <option value="Kristen" <%= user.agama === 'Kristen' ? 'selected' : '' %>>Kristen</option>
                  <option value="Katolik" <%= user.agama === 'Katolik' ? 'selected' : '' %>>Katolik</option>
                  <option value="Hindu" <%= user.agama === 'Hindu' ? 'selected' : '' %>>Hindu</option>
                  <option value="Buddha" <%= user.agama === 'Buddha' ? 'selected' : '' %>>Buddha</option>
                  <option value="Konghucu" <%= user.agama === 'Konghucu' ? 'selected' : '' %>>Konghucu</option>
                </select>
              </div>
              
              <div class="form-group">
                <label class="form-label">
                  <i class="fas fa-tint" style="margin-right: 6px; color: #DC143C;"></i>
                  Golongan Darah
                </label>
                <select name="goldar" class="form-control-glass">
                  <option value="">Pilih Golongan Darah</option>
                  <option value="A" <%= user.goldar === 'A' ? 'selected' : '' %>>A</option>
                  <option value="B" <%= user.goldar === 'B' ? 'selected' : '' %>>B</option>
                  <option value="AB" <%= user.goldar === 'AB' ? 'selected' : '' %>>AB</option>
                  <option value="O" <%= user.goldar === 'O' ? 'selected' : '' %>>O</option>
                </select>
              </div>
              
              <div class="form-group">
                <label class="form-label">
                  <i class="fas fa-phone" style="margin-right: 6px; color: #DC143C;"></i>
                  No. HP
                </label>
                <input 
                  type="tel" 
                  name="hp" 
                  class="form-control-glass" 
                  value="<%= user.hp || '' %>"
                  placeholder="08xxxxxxxxxx"
                >
              </div>
            </div>
            
            <hr class="section-divider">
            
            <!-- Address -->
            <div class="section-title">
              <i class="fas fa-home"></i>
              Alamat
            </div>
            
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-house-user" style="margin-right: 6px; color: #DC143C;"></i>
                Alamat Rumah
              </label>
              <textarea 
                name="rumah" 
                class="form-control-glass" 
                rows="3"
                placeholder="Jalan, Kelurahan, Kecamatan, Kota, Provinsi"
              ><%= user.rumah || '' %></textarea>
            </div>
            
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-bed" style="margin-right: 6px; color: #DC143C;"></i>
                Alamat Kos
              </label>
              <textarea 
                name="kos" 
                class="form-control-glass" 
                rows="3"
                placeholder="Alamat kos di Bandung (jika ada)"
              ><%= user.kos || '' %></textarea>
            </div>
            
            <hr class="section-divider">
            
            <!-- History & Experience -->
            <div class="section-title">
              <i class="fas fa-graduation-cap"></i>
              Riwayat & Pengalaman
            </div>
            
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-school" style="margin-right: 6px; color: #DC143C;"></i>
                Pendidikan
              </label>
              <textarea 
                name="pendidikan" 
                class="form-control-glass" 
                rows="3"
                placeholder="Riwayat pendidikan (SD, SMP, SMA)"
              ><%= user.pendidikan || '' %></textarea>
            </div>
            
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-tasks" style="margin-right: 6px; color: #DC143C;"></i>
                Kepanitiaan
              </label>
              <textarea 
                name="panitia" 
                class="form-control-glass" 
                rows="3"
                placeholder="Riwayat kepanitiaan yang pernah diikuti"
              ><%= user.panitia || '' %></textarea>
            </div>
            
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-users-cog" style="margin-right: 6px; color: #DC143C;"></i>
                Organisasi
              </label>
              <textarea 
                name="organisasi" 
                class="form-control-glass" 
                rows="3"
                placeholder="Riwayat organisasi yang pernah diikuti"
              ><%= user.organisasi || '' %></textarea>
            </div>
            
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-certificate" style="margin-right: 6px; color: #DC143C;"></i>
                Pelatihan
              </label>
              <textarea 
                name="pelatihan" 
                class="form-control-glass" 
                rows="3"
                placeholder="Pelatihan yang pernah diikuti"
              ><%= user.pelatihan || '' %></textarea>
            </div>
            
            <div class="form-group">
              <label class="form-label">
                <i class="fas fa-trophy" style="margin-right: 6px; color: #DC143C;"></i>
                Prestasi
              </label>
              <textarea 
                name="prestasi" 
                class="form-control-glass" 
                rows="3"
                placeholder="Prestasi yang pernah diraih"
              ><%= user.prestasi || '' %></textarea>
            </div>
            
            <!-- Action Buttons -->
            <div class="action-buttons">
              <button type="submit" class="btn-primary-gradient ripple-container" style="flex: 1;">
                <i class="fas fa-save"></i>
                Simpan Perubahan
              </button>
              <a href="/dashboard" class="btn-cancel" style="flex: 1;">
                <i class="fas fa-times"></i>
                Batal
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('partials/script') %>
  <script src="/javascript/animations.js"></script>
  <script src="/javascript/admin-animations.js"></script>
  
  <script>
    // Form validation enhancement
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.querySelector('form[data-validate]');
      const inputs = form.querySelectorAll('.form-control-glass');
      
      // Add validation on blur
      inputs.forEach(input => {
        input.addEventListener('blur', () => {
          if (input.hasAttribute('required') && !input.value.trim()) {
            input.style.borderColor = '#EF4444';
            input.style.boxShadow = '0 0 0 4px rgba(239, 68, 68, 0.1)';
          } else {
            input.style.borderColor = '';
            input.style.boxShadow = '';
          }
        });
        
        // Remove error on input
        input.addEventListener('input', () => {
          input.style.borderColor = '';
          input.style.boxShadow = '';
        });
      });
      
      // Form submit validation
      form.addEventListener('submit', (e) => {
        let isValid = true;
        
        inputs.forEach(input => {
          if (input.hasAttribute('required') && !input.value.trim()) {
            isValid = false;
            input.style.borderColor = '#EF4444';
            input.style.boxShadow = '0 0 0 4px rgba(239, 68, 68, 0.1)';
            input.scrollIntoView({ behavior: 'smooth', block: 'center' });
          }
        });
        
        if (!isValid) {
          e.preventDefault();
          alert('Mohon lengkapi semua field yang wajib diisi!');
        }
      });
    });
  </script>
</body>
</html>
