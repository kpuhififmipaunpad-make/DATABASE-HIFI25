<!-- Data Table Section -->
<div class="table-section">
  <div class="table-header">
    <div class="table-title">
      <i class="fas fa-table"></i>
      <h5>Data Warga HIFI</h5>
    </div>
    <div class="table-actions">
      <button class="btn-refresh" onclick="window.location.reload()">
        <i class="fas fa-sync-alt"></i>
        <span>Refresh Data</span>
      </button>
    </div>
  </div>
  
  <div class="table-responsive">
    <table id="usersTable" class="table table-hover" style="width:100%">
      <thead>
        <tr>
          <th>No</th>
          <th>Nama</th>
          <th>NPM</th>
          <th>Tempat Lahir</th>
          <th>Tanggal Lahir</th>
          <th>Agama</th>
          <th>Gol. Darah</th>
          <th>No. HP</th>
          <th>Email</th>
          <th>Alamat Rumah</th>
          <th>Alamat Kos</th>
          <th>Pendidikan</th>
          <th>Organisasi</th>
          <th class="no-export">Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><strong><%= user.nama %></strong></td>
            <td><%= user.npm %></td>
            <td><%= user.tempat_lahir %></td>
            <td><%= user.tanggal_lahir %></td>
            <td><%= user.agama %></td>
            <td><span class="badge badge-red"><%= user.golongan_darah %></span></td>
            <td><%= user.no_hp %></td>
            <td><%= user.email %></td>
            <td><%= user.alamat_rumah %></td>
            <td><%= user.alamat_kos %></td>
            <td><%= user.pendidikan %></td>
            <td><%= user.organisasi %></td>
            <td class="no-export">
              <div class="action-buttons">
                <button class="btn-action btn-edit" onclick="window.location.href='/dashboard/edit/<%= user.id %>'" title="Edit Data">
                  <i class="fas fa-edit"></i>
                </button>
                <button class="btn-action btn-delete" onclick="deleteUser('<%= user.id %>')" title="Hapus Data">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>

