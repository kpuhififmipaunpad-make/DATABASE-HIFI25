<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar - HIFI Database</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="icon" type="image/png" href="/img/LogoHIFI-2.png?v=2">
  <link rel="apple-touch-icon" href="/img/LogoHIFI-2.png?v=2">

  <style>
    body {
      background: linear-gradient(135deg, #DC143C 0%, #1E3A8A 100%);
      display: flex; align-items: center; justify-content: center;
      min-height: 100vh; padding: 20px;
    }
    .signup-container { width: 100%; max-width: 500px; animation: fadeInUp .6s ease-out; }
    .signup-card {
      background: rgba(255,255,255,.95); backdrop-filter: blur(20px);
      border-radius: 24px; padding: 40px;
      box-shadow: 0 20px 60px rgba(0,0,0,.3);
      border: 1px solid rgba(255,255,255,.3);
    }
    .logo-section { text-align: center; margin-bottom: 32px; }
    .logo-section img { width: 100px; height: auto; margin-bottom: 20px; animation: float 3s ease-in-out infinite; }
    .signup-title {
      font-size: 28px; font-weight: 700; text-align: center; margin-bottom: 8px;
      background: linear-gradient(135deg, #DC143C 0%, #1E3A8A 100%);
      -webkit-background-clip: text; -webkit-text-fill-color: transparent;
    }
    .signup-subtitle { text-align: center; color:#6B7280; margin-bottom: 32px; font-size: 14px; }
    .back-link { display:inline-flex; align-items:center; gap:8px; color:#6B7280; text-decoration:none; margin-bottom:20px; font-size:14px; transition:.3s; }
    .back-link:hover { color:#1E3A8A; transform: translateX(-5px); }

    .password-strength { height: 4px; border-radius: 2px; margin-top: 8px; background: #E5E7EB; overflow: hidden; }
    .password-strength-bar { height: 100%; width: 0%; transition: all .3s ease; border-radius: 2px; }
    .password-strength-bar.weak { width: 33%; background: #EF4444; }
    .password-strength-bar.medium { width: 66%; background: #F59E0B; }
    .password-strength-bar.strong { width: 100%; background: #10B981; }

    .form-footer { margin-top:24px; text-align:center; }
    .form-footer a { color:#1E3A8A; text-decoration:none; font-weight:600; transition:.3s; }
    .form-footer a:hover { color:#DC143C; }

    @media (max-width:480px){
      .signup-card{ padding:30px 24px; }
      .signup-title{ font-size:24px; }
    }
  </style>
</head>
<body>
  <!-- Background Shapes -->
  <div class="bg-shape bg-shape-1"></div>
  <div class="bg-shape bg-shape-2"></div>

  <!-- Alert Messages -->
  <% if (message != '' || unameBlank != '' || emailBlank != '' || passBlank != '' || password2 != '') { %>
    <div id="alert-border-3" class="alert-glass alert-error" style="position: fixed; top: 20px; right: 20px; z-index: 10000; max-width: 400px;">
      <i class="fas fa-exclamation-circle"></i>
      <span><%= message || unameBlank || emailBlank || passBlank || password2 %></span>
      <button onclick="dismiss()" style="background:none; border:none; color:inherit; cursor:pointer; margin-left:auto;">
        <i class="fas fa-times"></i>
      </button>
    </div>
  <% } %>

  <div class="signup-container">
    <div class="signup-card">
      <a href="/" class="back-link"><i class="fas fa-arrow-left"></i>Kembali ke Home</a>

      <div class="logo-section">
        <img src="/img/Logo HIFI - SVG.svg" alt="Logo HIFI" style="width:80px;">
      </div>

      <h1 class="signup-title">Daftar Akun Baru</h1>
      <p class="signup-subtitle">Lengkapi form di bawah untuk bergabung</p>

      <!-- Autofill DIMATIKAN, Save Password DIPERTAHANKAN
           - Form: autocomplete="off" (menahan autofill)
           - Username/Email: autocomplete="off" (menahan autofill)
           - Password: autocomplete="new-password" (agar prompt save password tetap muncul) -->
      <form
        action="/auth/signup"
        method="POST"
        name="validasi_form"
        onSubmit="return validasi_input(this)"
        data-validate
        autocomplete="off"
        aria-autocomplete="none"
      >
        <div class="form-group">
          <label class="form-label"><i class="fas fa-user"></i> Username (Gunakan NPM Anda)</label>
          <div class="input-group-glass">
            <i class="fas fa-user input-icon"></i>
            <input
              type="text"
              name="username"
              class="form-control-glass"
              placeholder="Gunakan NPM"
              minlength="8"
              required
              autocomplete="off"
              autocapitalize="none"
              spellcheck="false"
              inputmode="text"
            >
          </div>
          <small style="color:#6B7280; font-size:12px; margin-top:4px; display:block;">
            Username harus menggunakan NPM
          </small>
        </div>

        <div class="form-group">
          <label class="form-label"><i class="fas fa-envelope"></i> Email</label>
          <div class="input-group-glass">
            <i class="fas fa-envelope input-icon"></i>
            <input
              type="email"
              name="email"
              class="form-control-glass"
              placeholder="Gunakan email @mail.unpad.ac.id"
              required
              autocomplete="off"
              autocapitalize="none"
              spellcheck="false"
              inputmode="email"
            >
          </div>
        </div>

        <div class="form-group">
          <label class="form-label"><i class="fas fa-lock"></i> Password</label>
          <div class="input-group-glass" style="position:relative;">
            <i class="fas fa-lock input-icon"></i>
            <input
              type="password"
              id="password_1"
              name="password"
              class="form-control-glass"
              placeholder="Gunakan Minimal 8 Karakter"
              minlength="8"
              required
              autocomplete="new-password"
              oninput="checkPasswordStrength()"
            >
            <button type="button" class="password-toggle" onclick="togglePassword('password_1','icon_1')">
              <i class="fas fa-eye" id="icon_1"></i>
            </button>
          </div>
          <div class="password-strength">
            <div class="password-strength-bar" id="strengthBar"></div>
          </div>
          <small id="strengthText" style="color:#6B7280; font-size:12px; margin-top:4px; display:block;"></small>
        </div>

        <div class="form-group">
          <label class="form-label"><i class="fas fa-lock"></i> Konfirmasi Password</label>
          <div class="input-group-glass" style="position:relative;">
            <i class="fas fa-lock input-icon"></i>
            <input
              type="password"
              id="password_2"
              name="password2"
              class="form-control-glass"
              placeholder="Ulangi password Anda"
              minlength="8"
              required
              autocomplete="new-password"
              oninput="checkPass()"
            >
            <button type="button" class="password-toggle" onclick="togglePassword('password_2','icon_2')">
              <i class="fas fa-eye" id="icon_2"></i>
            </button>
          </div>
          <small id="pesan" style="font-size:12px; margin-top:4px; display:block;"></small>
        </div>

        <button
          type="submit"
          name="daftar_process"
          class="btn-primary-gradient ripple-container"
          style="width:100%; margin-top:24px;"
          disabled
        >
          <i class="fas fa-user-plus"></i> Daftar Sekarang
        </button>
      </form>

      <div class="form-footer">
        <p style="color:#6B7280;">Sudah punya akun? <a href="/auth/login">Masuk di sini</a></p>
      </div>
    </div>
  </div>

  <script src="/javascript/animations.js"></script>
  <script src="/javascript/validasi.js"></script>
  <script>
    function dismiss(){ const el = document.getElementById("alert-border-3"); if (el) el.classList.add("hide"); }
    setTimeout(() => { const el = document.getElementById("alert-border-3"); if (el) dismiss(); }, 5000);

    function togglePassword(inputId, iconId){
      const input = document.getElementById(inputId);
      const icon  = document.getElementById(iconId);
      if(!input || !icon) return;
      const toText = input.type === 'password';
      input.type = toText ? 'text' : 'password';
      icon.classList.toggle('fa-eye', !toText);
      icon.classList.toggle('fa-eye-slash', toText);
    }

    function checkPasswordStrength(){
      const val = document.getElementById('password_1').value;
      const bar = document.getElementById('strengthBar');
      const txt = document.getElementById('strengthText');
      let s = 0;
      if (val.length >= 8) s++;
      if (/[a-z]/.test(val) && /[A-Z]/.test(val)) s++;
      if (/[0-9]/.test(val)) s++;
      if (/[^a-zA-Z0-9]/.test(val)) s++;

      bar.className = 'password-strength-bar';
      if (s <= 1){ bar.classList.add('weak');   txt.textContent='Password lemah';  txt.style.color='#EF4444'; }
      else if (s <= 3){ bar.classList.add('medium'); txt.textContent='Password sedang'; txt.style.color='#F59E0B'; }
      else { bar.classList.add('strong'); txt.textContent='Password kuat'; txt.style.color='#10B981'; }
    }
  </script>
</body>
</html>
