<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - HIFI Database</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="icon" type="image/png" href="/img/LogoHIFI-2.png?v=2">
  <link rel="apple-touch-icon" href="/img/LogoHIFI-2.png?v=2">
</head>
<body>
  <!-- Enhanced Background Shapes -->
  <div class="bg-shape bg-shape-1"></div>
  <div class="bg-shape bg-shape-2"></div>
  <div class="bg-shape bg-shape-3"></div>
  
  <!-- Alert Messages -->
  <% if (message != '') { %>
    <div id="alert-border-3" class="alert-glass alert-<%= status === 'green' ? 'success' : 'error' %>">
      <i class="fas fa-<%= status === 'green' ? 'check-circle' : 'exclamation-circle' %>"></i>
      <span><%= message %></span>
      <button onclick="dismiss()" aria-label="Tutup notifikasi">
        <i class="fas fa-times"></i>
      </button>
    </div>
  <% } %>
  
  <div class="login-container">
    <div class="login-card">
      <a href="/" class="back-link">
        <i class="fas fa-arrow-left"></i>
        <span>Kembali ke Home</span>
      </a>
      
      <div class="logo-section">
        <img src="/img/Logo HIFI - SVG.svg" alt="Logo HIFI Database" loading="eager">
        <h1 class="login-title">Selamat Datang</h1>
        <p class="login-subtitle">Masuk ke akun HIFI Anda</p>
      </div>
      
      <form action="/auth/login" method="POST" data-validate id="loginForm">
        <div class="form-group">
          <label class="form-label" for="username">
            <i class="fas fa-user"></i>
            <span>Username (Gunakan NPM Anda)</span>
          </label>
          <div class="input-group-glass">
            <i class="fas fa-user input-icon"></i>
            <input 
              type="text" 
              id="username"
              name="username" 
              class="form-control-glass" 
              placeholder="Masukkan username Anda"
              required
              autocomplete="username"
              autocapitalize="off"
              spellcheck="false"
            >
          </div>
        </div>
        
        <div class="form-group">
          <label class="form-label" for="password">
            <i class="fas fa-lock"></i>
            <span>Password</span>
          </label>
          <div class="input-group-glass">
            <i class="fas fa-lock input-icon"></i>
            <input 
              type="password" 
              id="password" 
              name="password" 
              class="form-control-glass" 
              placeholder="Masukkan password Anda"
              required
              autocomplete="current-password"
            >
            <button type="button" class="password-toggle" id="seePassButton" aria-label="Tampilkan atau sembunyikan password">
              <i class="fas fa-eye" id="seePassIcon" aria-hidden="true"></i>
            </button>
          </div>
        </div>
        
        <button type="submit" class="btn-primary-gradient" id="loginButton">
          <i class="fas fa-sign-in-alt"></i>
          <span>Masuk</span>
        </button>
      </form>
      
      <div class="form-footer">
        <div class="help-text">
          Apabila Anda mengalami kendala saat masuk (misalnya lupa kata sandi, akun terkunci, atau kesalahan data),
          silakan menghubungi <strong>ADMD HIFI</strong>

          MEDFO HIFI
        </div>

        <p>
          <a href="/forgot">
            <i class="fas fa-key"></i> Lupa Password?
          </a>
        </p>
        <p>
          Belum punya akun? <a href="/auth/signup">
            <i class="fas fa-user-plus"></i> Daftar Sekarang
          </a>
        </p>
      </div>
    </div>
  </div>
  
  <script src="/javascript/animations.js"></script>
  <script src="/javascript/dom.js"></script>
  <script>
    // Enhanced dismiss function with smooth animation
    function dismiss() {
      const el = document.getElementById("alert-border-3");
      if (el) {
        el.style.opacity = '0';
        el.style.transform = 'translateX(100px)';
        setTimeout(() => {
          el.classList.add("hide");
        }, 400);
      }
    }
    
    // Auto-dismiss after 5 seconds
    setTimeout(() => {
      const alert = document.getElementById("alert-border-3");
      if (alert && !alert.classList.contains('hide')) {
        dismiss();
      }
    }, 5000);
    
    // Form submission handling with loading state
    const loginForm = document.getElementById('loginForm');
    const loginButton = document.getElementById('loginButton');
    
    if (loginForm && loginButton) {
      loginForm.addEventListener('submit', function(e) {
        // Add loading state
        loginButton.classList.add('loading');
        loginButton.disabled = true;
        
        const buttonText = loginButton.querySelector('span');
        const buttonIcon = loginButton.querySelector('i');
        
        if (buttonText) buttonText.textContent = 'Memproses...';
        if (buttonIcon) {
          buttonIcon.classList.remove('fa-sign-in-alt');
          buttonIcon.classList.add('fa-spinner', 'fa-spin');
        }
        
        // Form will submit normally, no e.preventDefault()
      });
    }
    
    // Add ripple effect to button
    if (loginButton) {
      loginButton.addEventListener('mousedown', function(e) {
        const ripple = document.createElement('span');
        const rect = this.getBoundingClientRect();
        const size = Math.max(rect.width, rect.height);
        const x = e.clientX - rect.left - size / 2;
        const y = e.clientY - rect.top - size / 2;
        
        ripple.style.cssText = `
          position: absolute;
          width: ${size}px;
          height: ${size}px;
          left: ${x}px;
          top: ${y}px;
          border-radius: 50%;
          background: rgba(255, 255, 255, 0.5);
          transform: scale(0);
          animation: ripple 0.6s ease-out;
          pointer-events: none;
        `;
        
        this.appendChild(ripple);
        
        setTimeout(() => {
          ripple.remove();
        }, 600);
      });
    }
    
    // Add ripple animation
    if (!document.getElementById('ripple-animation')) {
      const style = document.createElement('style');
      style.id = 'ripple-animation';
      style.textContent = `
        @keyframes ripple {
          to {
            transform: scale(4);
            opacity: 0;
          }
        }
      `;
      document.head.appendChild(style);
    }
    
    // Enhanced input focus effects
    const inputs = document.querySelectorAll('.form-control-glass');
    inputs.forEach(input => {
      input.addEventListener('focus', function() {
        this.parentElement.style.transform = 'translateY(-2px)';
      });
      
      input.addEventListener('blur', function() {
        this.parentElement.style.transform = 'translateY(0)';
      });
    });
    
    // Accessibility: Announce form errors to screen readers
    const formInputs = document.querySelectorAll('input[required]');
    formInputs.forEach(input => {
      input.addEventListener('invalid', function(e) {
        e.preventDefault();
        this.setAttribute('aria-invalid', 'true');
        
        // Visual feedback
        this.style.borderColor = '#EF4444';
        this.style.animation = 'shake 0.4s ease';
        
        setTimeout(() => {
          this.style.animation = '';
        }, 400);
      });
      
      input.addEventListener('input', function() {
        this.removeAttribute('aria-invalid');
        this.style.borderColor = '';
      });
    });
    
    // Add shake animation
    if (!document.getElementById('shake-animation')) {
      const style = document.createElement('style');
      style.id = 'shake-animation';
      style.textContent = `
        @keyframes shake {
          0%, 100% { transform: translateX(0); }
          25% { transform: translateX(-10px); }
          75% { transform: translateX(10px); }
        }
      `;
      document.head.appendChild(style);
    }
  </script>
</body>
</html>
