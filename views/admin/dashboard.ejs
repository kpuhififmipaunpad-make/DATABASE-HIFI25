  <!-- Particle Animation Script -->
  <script>
    (function() {
      'use strict';
      
      // Particle Canvas Setup
      const canvas = document.getElementById('particles-canvas');
      if (!canvas) return;
      
      const ctx = canvas.getContext('2d');
      let particles = [];
      const particleCount = 80;
      let animationId;
      
      // Set canvas size
      function setCanvasSize() {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
      }
      
      setCanvasSize();
      
      // Particle Class
      class Particle {
        constructor() {
          this.reset();
        }
        
        reset() {
          this.x = Math.random() * canvas.width;
          this.y = Math.random() * canvas.height;
          this.size = Math.random() * 2 + 1;
          this.speedX = (Math.random() - 0.5) * 0.5;
          this.speedY = (Math.random() - 0.5) * 0.5;
          this.opacity = Math.random() * 0.5 + 0.2;
        }
        
        update() {
          this.x += this.speedX;
          this.y += this.speedY;
          
          // Wrap around edges
          if (this.x > canvas.width) this.x = 0;
          if (this.x < 0) this.x = canvas.width;
          if (this.y > canvas.height) this.y = 0;
          if (this.y < 0) this.y = canvas.height;
        }
        
        draw() {
          ctx.fillStyle = `rgba(255, 255, 255, ${this.opacity})`;
          ctx.beginPath();
          ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
          ctx.fill();
        }
      }
      
      // Initialize particles
      function init() {
        particles = [];
        for (let i = 0; i < particleCount; i++) {
          particles.push(new Particle());
        }
      }
      
      // Connect particles with lines
      function connectParticles() {
        for (let i = 0; i < particles.length; i++) {
          for (let j = i + 1; j < particles.length; j++) {
            const dx = particles[i].x - particles[j].x;
            const dy = particles[i].y - particles[j].y;
            const distance = Math.sqrt(dx * dx + dy * dy);
            
            if (distance < 120) {
              const opacity = 0.15 * (1 - distance / 120);
              ctx.strokeStyle = `rgba(255, 255, 255, ${opacity})`;
              ctx.lineWidth = 1;
              ctx.beginPath();
              ctx.moveTo(particles[i].x, particles[i].y);
              ctx.lineTo(particles[j].x, particles[j].y);
              ctx.stroke();
            }
          }
        }
      }
      
      // Animation loop
      function animate() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        
        particles.forEach(particle => {
          particle.update();
          particle.draw();
        });
        
        connectParticles();
        
        animationId = requestAnimationFrame(animate);
      }
      
      // Handle window resize
      window.addEventListener('resize', () => {
        setCanvasSize();
        init();
      });
      
      // Pause animation when tab is not visible
      document.addEventListener('visibilitychange', () => {
        if (document.hidden) {
          cancelAnimationFrame(animationId);
        } else {
          animate();
        }
      });
      
      // Start animation
      init();
      animate();
      
      // Number counter animation for stat cards
      function animateValue(element, start, end, duration) {
        const range = end - start;
        const increment = end > start ? 1 : -1;
        const stepTime = Math.abs(Math.floor(duration / range));
        let current = start;
        
        const timer = setInterval(() => {
          current += increment;
          element.textContent = current;
          
          if (current === end) {
            clearInterval(timer);
          }
        }, stepTime);
      }
      
      // Animate stat values on page load
      window.addEventListener('load', () => {
        const totalUsers = document.getElementById('totalUsers');
        const totalAdmins = document.getElementById('totalAdmins');
        const activeMembers = document.getElementById('activeMembers');
        
        if (totalUsers) {
          const targetValue = parseInt(totalUsers.textContent);
          totalUsers.textContent = '0';
          animateValue(totalUsers, 0, targetValue, 1500);
        }
        
        if (totalAdmins) {
          const targetValue = parseInt(totalAdmins.textContent);
          totalAdmins.textContent = '0';
          animateValue(totalAdmins, 0, targetValue, 1500);
        }
        
        if (activeMembers) {
          const targetValue = parseInt(activeMembers.textContent);
          activeMembers.textContent = '0';
          animateValue(activeMembers, 0, targetValue, 1500);
        }
      });
      
      // Stat card click effects
      document.querySelectorAll('.stat-card').forEach(card => {
        card.addEventListener('click', function() {
          this.style.animation = 'pulse 0.5s ease';
          setTimeout(() => {
            this.style.animation = '';
          }, 500);
        });
      });
      
    })();
  </script>
