<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up | Database HIFI</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="gradient-bg-1">
    <!-- Alert Messages -->
    <% if(message && message.length > 0 || unameBlank || emailBlank || passBlank || password2) { %>
    <div id="alert-border-3" class="fixed top-4 right-4 z-50 glass-card p-4 max-w-md" role="alert">
        <div class="flex items-center">
            <i class="fas fa-exclamation-circle text-2xl mr-3 text-white"></i>
            <div class="text-sm font-medium text-white">
                <%= message || unameBlank || emailBlank || passBlank || password2 %>
            </div>
            <button onclick="dismiss()" class="ml-auto text-white hover:text-gray-200">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <% } %>

    <div class="min-h-screen flex items-center justify-center px-4 py-12">
        <div class="glass-card p-8 md:p-12 w-full max-w-md">
            <!-- Logo -->
            <div class="text-center mb-8">
                <img src="/img/LogoHIFI-2.png" alt="HIFI Logo for signup page with welcoming design" class="h-24 w-auto mx-auto mb-4">
                <h1 class="text-3xl font-bold text-white mb-2">Daftar Akun</h1>
                <p class="text-white/80">Buat akun Database HIFI baru</p>
            </div>

            <!-- Signup Form -->
            <form action="/auth/signup" method="POST" name="validasi_form" onsubmit="return validasi_input(this)" class="space-y-5">
                <div>
                    <label for="username" class="block text-sm font-medium text-white mb-2">
                        <i class="fas fa-user mr-2"></i>Username
                    </label>
                    <input type="text" id="username" name="username" required 
                           class="glass-input" placeholder="Minimal 8 karakter">
                </div>

                <div>
                    <label for="email" class="block text-sm font-medium text-white mb-2">
                        <i class="fas fa-envelope mr-2"></i>Email
                    </label>
                    <input type="email" id="email" name="email" required 
                           class="glass-input" placeholder="contoh@email.com">
                </div>

                <div>
                    <label for="password_1" class="block text-sm font-medium text-white mb-2">
                        <i class="fas fa-lock mr-2"></i>Password
                    </label>
                    <div class="relative">
                        <input type="password" id="password_1" name="password" required 
                               class="glass-input pr-12" placeholder="Masukkan password">
                        <button type="button" id="seePassButton" 
                                class="absolute right-3 top-1/2 transform -translate-y-1/2 text-white/70 hover:text-white">
                            <i class="fas fa-eye" id="seePassIcon"></i>
                        </button>
                    </div>
                </div>

                <div>
                    <label for="password_2" class="block text-sm font-medium text-white mb-2">
                        <i class="fas fa-lock mr-2"></i>Konfirmasi Password
                    </label>
                    <input type="password" id="password_2" name="password2" required 
                           onkeyup="checkPass()" class="glass-input" placeholder="Ulangi password">
                    <span id="pesan" class="text-sm"></span>
                </div>

                <button type="submit" name="daftar_process" class="glass-button w-full" disabled>
                    <i class="fas fa-user-plus mr-2"></i>Daftar
                </button>

                <p class="text-center text-white/80 text-sm">
                    Sudah punya akun? 
                    <a href="/auth/login" class="text-white font-semibold hover:underline">Login di sini</a>
                </p>
            </form>
        </div>
    </div>

    <script src="/javascript/validasi.js"></script>
    <script src="/javascript/dom.js"></script>
</body>
</html>
