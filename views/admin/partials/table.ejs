<div class="table-responsive">
  <table id="usersTable" class="table table-bordered table-striped table-hover" style="width:100%">
    <thead>
      <tr>
        <th>No</th>
        <th>Username</th>
        <th>Nama</th>
        <th>NPM</th>
        <th>Email</th>
        <th>No. HP</th>
        <th>Role</th>
        <th>Terakhir Update</th>
        <th class="no-export">Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach((user, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><strong><%= user.username %></strong></td>
          <td><%= user.nama || '-' %></td>
          <td><%= user.npm || '-' %></td>
          <td><%= user.email || '-' %></td>
          <td><%= user.hp || '-' %></td>
          <td>
            <% if (user.role === 'admin') { %>
              <span class="badge badge-danger">
                <i class="fas fa-crown"></i> Admin
              </span>
            <% } else { %>
              <span class="badge badge-primary">
                <i class="fas fa-user"></i> User
              </span>
            <% } %>
          </td>
          <td><%= user.time || '-' %></td>
          <td class="no-export">
            <button class="btn btn-primary btn-sm btn-edit" onclick="window.location.href='/dashboard/edit/<%= user._id %>'" title="Edit">
              <i class="fas fa-edit"></i>
            </button>
            <button class="btn btn-danger btn-sm btn-delete" onclick="confirmDelete('<%= user._id %>')" title="Hapus">
              <i class="fas fa-trash"></i>
            </button>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<style>
  .table-responsive {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  #usersTable {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
  }

  #usersTable thead {
    background: linear-gradient(135deg, #DC143C 0%, #1E3A8A 100%);
  }

  #usersTable thead th {
    padding: 16px;
    color: white;
    font-weight: 600;
    text-align: left;
    border: none;
    font-size: 14px;
    white-space: nowrap;
    vertical-align: middle;
  }

  #usersTable thead th:first-child {
    border-top-left-radius: 12px;
  }

  #usersTable thead th:last-child {
    border-top-right-radius: 12px;
  }

  #usersTable tbody tr {
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }

  #usersTable tbody td {
    padding: 16px;
    border: none;
    font-size: 14px;
    color: #374151;
    vertical-align: middle;
  }

  .btn-edit,
  .btn-delete {
    padding: 6px 12px;
    font-size: 13px;
    margin-right: 4px;
    transition: all 0.3s ease;
  }

  .btn-edit:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
  }

  .btn-delete:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
  }

  .badge {
    padding: 6px 12px;
    font-size: 12px;
    font-weight: 600;
    border-radius: 6px;
  }

  @media (max-width: 768px) {
    #usersTable thead th,
    #usersTable tbody td {
      padding: 12px 8px;
      font-size: 13px;
    }

    .btn-edit,
    .btn-delete {
      padding: 4px 8px;
      font-size: 12px;
    }
  }
</style>

<script>
  function confirmDelete(id) {
    if (confirm('Apakah Anda yakin ingin menghapus data ini?')) {
      const form = document.createElement('form');
      form.method = 'POST';
      form.action = '/dashboard/delete/' + id + '?_method=DELETE';
      document.body.appendChild(form);
      form.submit();
    }
  }
</script>
