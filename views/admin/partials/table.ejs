<div class="table-responsive">
  <table id="usersTable" class="display nowrap" style="width:100%">
    <thead>
      <tr>
        <th>No</th>
        <th>Username</th>
        <th>Nama</th>
        <th>NPM</th>
        <th>Email</th>
        <th>No. HP</th>
        <th>Role</th>
        <th>Terakhir Update</th>
        <th class="no-export">Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach((user, index) => { %>
        <tr class="clickable-row">
          <td><%= index + 1 %></td>
          <td><strong><%= user.username %></strong></td>
          <td><%= user.nama || '-' %></td>
          <td><%= user.npm || '-' %></td>
          <td><%= user.email || '-' %></td>
          <td><%= user.hp || '-' %></td>
          <td>
            <span class="badge-glass badge-<%= user.role === 'admin' ? 'red' : 'blue' %>">
              <i class="fas fa-<%= user.role === 'admin' ? 'crown' : 'user' %>"></i>
              <%= user.role === 'admin' ? 'Admin' : 'User' %>
            </span>
          </td>
          <td><%= user.time || '-' %></td>
          <td class="no-export">
            <div class="action-buttons">
              <button 
                class="btn-action btn-edit" 
                onclick="window.location.href='/dashboard/edit/<%= user._id %>'" 
                title="Edit Data"
                aria-label="Edit <%= user.nama %>">
                <i class="fas fa-edit"></i>
              </button>
              <button 
                class="btn-action btn-delete" 
                onclick="event.stopPropagation(); confirmDelete('<%= user._id %>')" 
                title="Hapus Data"
                aria-label="Hapus <%= user.nama %>">
                <i class="fas fa-trash"></i>
              </button>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<style>
  /* Table Base Styles */
  .table-responsive {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  #usersTable {
    width: 100% !important;
    border-collapse: separate;
    border-spacing: 0;
    background: white;
  }

  /* Table Header */
  #usersTable thead {
    background: linear-gradient(135deg, #DC143C 0%, #1E3A8A 100%);
    position: sticky;
    top: 0;
    z-index: 10;
  }

  #usersTable thead th {
    padding: 16px;
    color: white;
    font-weight: 700;
    text-align: left;
    border: none;
    font-size: 14px;
    white-space: nowrap;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  #usersTable thead th:first-child {
    border-top-left-radius: 12px;
  }

  #usersTable thead th:last-child {
    border-top-right-radius: 12px;
  }

  /* Table Body */
  #usersTable tbody tr {
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    background: white;
  }

  #usersTable tbody tr:hover {
    background: rgba(30, 58, 138, 0.05);
    transform: scale(1.01);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  #usersTable tbody tr.shown {
    background: rgba(220, 20, 60, 0.05);
    border-left: 4px solid #DC143C;
  }

  #usersTable tbody td {
    padding: 14px 16px;
    border: none;
    font-size: 14px;
    color: #374151;
    vertical-align: middle;
  }

  /* Action Buttons Container */
  .action-buttons {
    display: flex;
    gap: 6px;
    justify-content: center;
    align-items: center;
  }

  /* Badge Styling */
  .badge-glass {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 700;
    white-space: nowrap;
    backdrop-filter: blur(5px);
  }

  .badge-red {
    background: rgba(220, 20, 60, 0.1);
    border: 1px solid rgba(220, 20, 60, 0.3);
    color: #DC143C;
  }

  .badge-blue {
    background: rgba(30, 58, 138, 0.1);
    border: 1px solid rgba(30, 58, 138, 0.3);
    color: #1E3A8A;
  }

  /* Detail Card */
  .detail-card {
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    border-radius: 20px;
    padding: 28px;
    margin: 12px 0;
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.12),
      inset 0 1px 0 rgba(255, 255, 255, 0.6);
    border: 1px solid rgba(0, 0, 0, 0.06);
    animation: slideDown 0.4s ease-out;
  }

  .detail-header {
    display: flex;
    align-items: center;
    gap: 20px;
    padding-bottom: 24px;
    border-bottom: 2px solid rgba(0, 0, 0, 0.06);
    margin-bottom: 24px;
  }

  .detail-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, #DC143C 0%, #1E3A8A 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 40px;
    box-shadow: 0 8px 24px rgba(220, 20, 60, 0.3);
    flex-shrink: 0;
  }

  .detail-header-info {
    flex: 1;
  }

  .detail-name {
    font-size: 24px;
    font-weight: 800;
    background: linear-gradient(135deg, #DC143C 0%, #1E3A8A 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin: 0 0 8px 0;
  }

  .detail-role {
    font-size: 14px;
  }

  .detail-body {
    display: grid;
    gap: 20px;
  }

  .detail-section h6 {
    font-size: 14px;
    font-weight: 700;
    color: #1E3A8A;
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    gap: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .detail-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 12px;
  }

  .detail-item {
    background: rgba(30, 58, 138, 0.03);
    padding: 12px 16px;
    border-radius: 12px;
    border-left: 3px solid #DC143C;
  }

  .detail-item strong {
    display: block;
    font-size: 11px;
    color: #6B7280;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 4px;
  }

  .detail-item span {
    display: block;
    font-size: 14px;
    color: #1F2937;
    font-weight: 600;
    word-break: break-word;
  }

  .detail-footer {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 2px solid rgba(0, 0, 0, 0.06);
  }

  .detail-hint {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    color: #6B7280;
    margin: 0;
    font-style: italic;
  }

  .detail-hint i {
    color: #3B82F6;
  }

  /* Responsive Detail Card */
  @media (max-width: 768px) {
    .detail-card {
      padding: 20px;
    }

    .detail-header {
      flex-direction: column;
      text-align: center;
    }

    .detail-avatar {
      width: 64px;
      height: 64px;
      font-size: 32px;
    }

    .detail-name {
      font-size: 20px;
    }

    .detail-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
