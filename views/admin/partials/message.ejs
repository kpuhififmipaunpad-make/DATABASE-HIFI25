<% if (message != '') { %>
  <div id="alert-border-3" class="alert-glass alert-<%= status === 'success' ? 'success' : status === 'danger' ? 'error' : 'info' %>" style="margin-bottom: 24px;">
    <i class="fas fa-<%= status === 'success' ? 'check-circle' : status === 'danger' ? 'exclamation-circle' : 'info-circle' %>"></i>
    <span><%= message %></span>
    <button onclick="dismiss()" style="background: none; border: none; color: inherit; cursor: pointer; margin-left: auto;">
      <i class="fas fa-times"></i>
    </button>
  </div>
  
  <script>
    function dismiss() {
      document.getElementById("alert-border-3").classList.add("hide");
    }
    
    setTimeout(() => {
      const alert = document.getElementById("alert-border-3");
      if (alert) dismiss();
    }, 5000);
  </script>
<% } %>
