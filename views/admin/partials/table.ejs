<div class="table-responsive">
  <table id="usersTable" class="display" style="width:100%">
    <thead>
      <tr>
        <th>No</th>
        <th>Username</th>
        <th>Nama</th>
        <th>NPM</th>
        <th>Email</th>
        <th>No. HP</th>
        <th>Role</th>
        <th>Terakhir Update</th>
        <th class="no-export">Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach((user, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><strong><%= user.username %></strong></td>
          <td><%= user.nama || '-' %></td>
          <td><%= user.npm || '-' %></td>
          <td><%= user.email || '-' %></td>
          <td><%= user.hp || '-' %></td>
          <td>
            <span class="badge-glass badge-<%= user.role === 'admin' ? 'red' : 'blue' %>">
              <i class="fas fa-<%= user.role === 'admin' ? 'crown' : 'user' %>"></i>
              <%= user.role === 'admin' ? 'Admin' : 'User' %>
            </span>
          </td>
          <td><%= user.time || '-' %></td>
          <td class="no-export no-detail">
            <button class="btn-action btn-edit" onclick="window.location.href='/dashboard/edit/<%= user._id %>'" title="Edit" aria-label="Edit <%= user.nama %>">
              <i class="fas fa-edit"></i>
            </button>
            <button class="btn-action btn-delete" onclick="HIFIAdmin.confirmDelete('<%= user._id %>')" title="Hapus" aria-label="Hapus <%= user.nama %>">
              <i class="fas fa-trash"></i>
            </button>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<style>
  .table-responsive {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  #usersTable {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
  }

  #usersTable thead {
    background: linear-gradient(135deg, #DC143C 0%, #1E3A8A 100%);
  }

  #usersTable thead th {
    padding: 16px;
    color: white;
    font-weight: 600;
    text-align: left;
    border: none;
    font-size: 14px;
    white-space: nowrap;
  }

  #usersTable thead th:first-child {
    border-top-left-radius: 12px;
  }

  #usersTable thead th:last-child {
    border-top-right-radius: 12px;
  }

  #usersTable tbody tr {
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  #usersTable tbody tr:hover {
    background: rgba(30, 58, 138, 0.05);
  }

  #usersTable tbody tr.shown {
    background: rgba(220, 20, 60, 0.05);
  }

  #usersTable tbody td {
    padding: 16px;
    border: none;
    font-size: 14px;
    color: #374151;
  }

  @media (max-width: 768px) {
    #usersTable thead th,
    #usersTable tbody td {
      padding: 12px 8px;
      font-size: 13px;
    }
    
    .btn-action {
      width: 36px;
      height: 36px;
    }
  }
</style>
