<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up | Database HIFI</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Alert Messages -->
    <% if(message && message.length > 0 || unameBlank || emailBlank || passBlank || password2) { %>
    <div id="alert-border-3" class="fixed top-4 right-4 z-50 glass-card p-4 max-w-md" role="alert">
        <div class="flex items-center">
            <i class="fas fa-exclamation-circle text-2xl mr-3 text-red-400"></i>
            <div class="text-sm font-medium text-white">
                <%= message || unameBlank || emailBlank || passBlank || password2 %>
            </div>
            <button onclick="dismiss()" class="ml-auto text-white hover:text-gray-200 transition-smooth">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <% } %>

    <div class="min-h-screen flex items-center justify-center px-4 py-12">
        <div class="glass-card p-10 md:p-14 w-full max-w-lg">
            <!-- Logo -->
            <div class="text-center mb-10 animate-scaleIn">
                <img src="/img/LogoHIFI-2.png" alt="HIFI Logo for signup registration page with welcoming blue red design theme" class="h-28 w-auto mx-auto mb-6">
                <h1 class="text-4xl font-bold text-white mb-3">Daftar Akun</h1>
                <p class="text-white/80 text-lg">Buat akun Database HIFI baru</p>
            </div>

            <!-- Signup Form -->
            <form action="/auth/signup" method="POST" name="validasi_form" onsubmit="return validasi_input(this)" class="space-y-6 animate-fadeInUp">
                <div>
                    <label for="username" class="block text-sm font-semibold text-white mb-2">
                        <i class="fas fa-user mr-2 text-blue-400"></i>Username
                    </label>
                    <input type="text" id="username" name="username" required 
                           class="glass-input" placeholder="Minimal 8 karakter">
                    <p class="text-white/60 text-xs mt-2">Username harus lebih dari 8 karakter</p>
                </div>

                <div>
                    <label for="email" class="block text-sm font-semibold text-white mb-2">
                        <i class="fas fa-envelope mr-2 text-blue-400"></i>Email
                    </label>
                    <input type="email" id="email" name="email" required 
                           class="glass-input" placeholder="contoh@email.com">
                </div>

                <div>
                    <label for="password_1" class="block text-sm font-semibold text-white mb-2">
                        <i class="fas fa-lock mr-2 text-red-400"></i>Password
                    </label>
                    <div class="relative">
                        <input type="password" id="password_1" name="password" required 
                               class="glass-input pr-14" placeholder="Buat password yang kuat">
                        <button type="button" id="seePassButton" 
                                class="absolute right-4 top-1/2 transform -translate-y-1/2 text-white/70 hover:text-white transition-smooth">
                            <i class="fas fa-eye text-xl" id="seePassIcon"></i>
                        </button>
                    </div>
                </div>

                <div>
                    <label for="password_2" class="block text-sm font-semibold text-white mb-2">
                        <i class="fas fa-lock mr-2 text-red-400"></i>Konfirmasi Password
                    </label>
                    <input type="password" id="password_2" name="password2" required 
                           onkeyup="checkPass()" class="glass-input" placeholder="Ulangi password Anda">
                    <span id="pesan" class="text-sm font-semibold"></span>
                </div>

                <button type="submit" name="daftar_process" class="glass-button w-full text-lg py-4 ripple bg-gradient-to-r from-blue-600/30 to-red-600/30 hover:from-blue-600/40 hover:to-red-600/40" disabled>
                    <i class="fas fa-user-plus mr-2"></i>Daftar Sekarang
                </button>

                <div class="relative my-8">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-white/20"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 bg-transparent text-white/70 font-medium">atau</span>
                    </div>
                </div>

                <p class="text-center text-white/80 text-base">
                    Sudah punya akun? 
                    <a href="/auth/login" class="text-white font-bold hover:text-blue-300 transition-smooth">
                        Login di sini
                    </a>
                </p>
            </form>
        </div>
    </div>

    <script src="/javascript/validasi.js"></script>
    <script src="/javascript/dom.js"></script>
    <script src="/javascript/animations.js"></script>
</body>
</html>
